    <record id="sale_order_custom_paperformat" model="report.paperformat">
        <field name="name">Sale Order Custom Paper Format</field>
        <field name="format">A4</field>
        <field name="orientation">Landscape</field>
        <field name="page_height">300</field>
        <field name="page_width">0</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_spacing">35</field>
        <field name="disable_shrinking"></field>
        <field name="dpi">90</field>
    </record>
    
    <record id="sale_order_template_record" model="ir.actions.report">
        <field name="name">Sale order pdf</field>    
        <field name="model">sale.order</field>    
        <field name="report_type">qweb-pdf</field>    
        <field name="report_name">qweb_test.sale_order_template</field>    
       <field name="report_file">qweb_test.sale_order_template</field>
        <field name="binding_model_id" ref="sale.model_sale_order" />
        <field name="binding_type">report</field>
